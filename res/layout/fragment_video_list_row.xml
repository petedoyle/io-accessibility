<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:padding="5dip"
    android:orientation="vertical">
    
	<TextView
		android:id="@+id/video_list_row_title"
	    android:layout_width="wrap_content" 
	    android:layout_height="22dip" 
	    android:layout_marginBottom="2dip"
	    style="@style/TextAppearance.ListView.Row.Title"
	    />
	<TextView
		android:id="@+id/video_list_row_description"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    style="@style/TextAppearance.ListView.Row.Description"
	    />
	<TextView
		android:id="@+id/video_list_row_bottom"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    style="@style/TextAppearance.ListView.Row.Bottom"
	    />
</LinearLayout>